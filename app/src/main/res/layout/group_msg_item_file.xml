<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/round_recatngle_"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtLft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="recive"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/LeftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Time"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp" />

    </LinearLayout>

    <RelativeLayout

        android:id="@+id/LeftRelative"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@id/txtLft"
        android:visibility="gone"
        tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/imgLft"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/videoLeft"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/thumbLeft"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />


        <TextView
            android:id="@+id/ImageLeftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_bg"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/RightChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/round_recatngle_"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtRigCht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/RightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Time"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp" />


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/RightRelative"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@id/RightChat"
        android:layout_alignParentEnd="true"
        android:visibility="gone">


        <ImageView
            android:id="@+id/imgRgt"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/videoRight"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/thumbRight"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />


        <TextView
            android:id="@+id/imgRightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/gradient_bg"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Time"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp" />

    </RelativeLayout>
</RelativeLayout>